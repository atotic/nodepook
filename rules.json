{
  "rules": {
    "users": {
      "$userId": {
        ".write": "auth.uid === $userId",
        "account": {
          ".write": "auth.uid === $userId && ( data.exists() || (!data.exists() && newData.child('email').exists()))",
          ".read": "auth.uid === $userId",
          "email": { ".validate" : "true" },
          "firstName": { ".validate" : "newData.isString()"},
          "state": { ".validate": "newData.isString() && newData.val().length === 2" },
          "zip": { ".validate": "newData.isString()"}
        }
      }
    },
    "photos": {
      "$userId": {
        ".read": "auth.uid === $userId",
        ".write": "auth.uid === $userId",
        "$photoId": {
          ".read": "true",
          ".write": "auth.uid === $userId"
        }
      }
    }
  }
}
